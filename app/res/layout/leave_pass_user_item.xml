<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/simi_color_white"
    android:orientation="vertical" >
	
    <View
        android:id="@+id/m_leave_view"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/transparent"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/m_pass_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ad_loading" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            >

            <TextView
                android:id="@+id/m_pass_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="品牌"
                android:textColor="@color/simi_color_gray"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/m_pass_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/m_pass_name"
                android:text="折扣"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/m_pass_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="14:32"
                android:textColor="@color/simi_color_gray"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_view"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginLeft="22dp"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingLeft="10dp" >

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/simi_color_gray" />
    </LinearLayout>

</LinearLayout>