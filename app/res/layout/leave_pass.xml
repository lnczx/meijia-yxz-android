<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/leave_pass"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
     >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cut_off_rule" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审批编号：" 
            android:textColor="@color/simi_color_dark_gray"
            />

        <TextView
            android:id="@+id/m_leave_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
         android:paddingLeft="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在部门：" 
            android:textColor="@color/simi_color_dark_gray"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
         android:paddingLeft="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请假类型：" 
          	android:textColor="@color/simi_color_dark_gray"
            />

        <TextView
            android:id="@+id/m_leave_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="婚假" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
         android:paddingLeft="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间：" 
            android:textColor="@color/simi_color_dark_gray"
            />

        <TextView
            android:id="@+id/m_leave_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-03-09" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
         android:paddingLeft="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间："
           	android:textColor="@color/simi_color_dark_gray"
             />

        <TextView
            android:id="@+id/m_leave_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-03-15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
         android:paddingLeft="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请假天数："
            android:textColor="@color/simi_color_dark_gray"
             />

        <TextView
            android:id="@+id/m_leave_total_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7天" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
         android:paddingLeft="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请假事由：" 
           	android:textColor="@color/simi_color_dark_gray"
            />

        <TextView
            android:id="@+id/m_leave_remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哈哈哈" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
         android:paddingLeft="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="附件：" 
            android:textColor="@color/simi_color_dark_gray"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>

</LinearLayout>