<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--底部功能条-->
    <FrameLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/webview_comment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#F4F5F6"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/m_btn_send_comment"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_round_edittext"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="写评论..."
                android:textColor="@color/simi_color_gray"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/m_iv_comment"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/new_frg_ping_lun" />

                <ImageView
                    android:id="@+id/m_iv_zan"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/bg_img_shoucang_selector" />

                <ImageView
                    android:id="@+id/m_iv_share"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/new_frg_fen_xiang" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/btn_take"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fd9808"
            android:gravity="center"
            android:text="参加该课程"
            android:textSize="14sp"
            android:textColor="@color/white" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom"
        android:orientation="vertical">

        <!--标题栏-->
        <include layout="@layout/layout_title_bar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--播放器-->
            <RelativeLayout
                android:id="@+id/layout_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.aliyun.vodplayerview.widget.AliyunVodPlayerView
                    android:id="@+id/video_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </RelativeLayout>
            <!--播放器上覆盖的缩略图-->
            <ImageView
                android:id="@+id/iv_thum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                app:tabMode="fixed"
                app:tabIndicatorColor="@color/video_list_playing_text_color"
                app:tabSelectedTextColor="@color/video_list_playing_text_color"
                app:tabTextColor="@color/title_text_color"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

    <!--写评论View-->
    <include layout="@layout/layout_video_comment" />

</RelativeLayout>