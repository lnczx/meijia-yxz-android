<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_total_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/title_background_color" >

        <ImageView
            android:id="@+id/title_btn_left"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:focusable="true"
            android:scaleType="center"
            android:src="@drawable/title_left_back" />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:text="搜索" />

        <RelativeLayout
            android:id="@+id/rl_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/tv_search"
            android:layout_toRightOf="@id/title_btn_left"
            android:background="@drawable/search_view_activity"
            android:gravity="left"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:paddingLeft="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/iconfont_sousuo" />

            <EditText
                android:id="@+id/et_search_kw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/iv_search"
                android:background="@null"
                android:focusable="true"
                android:hint="招人秘籍、升职技巧一键拥有"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/text_normal"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_voice"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:paddingRight="5dp"
                android:src="@drawable/iconfont_yuyin"
                android:visibility="gone"
                 />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/simi_color_line_gray" />
    <com.meijialife.simi.ui.IndicatorTabBarForTrial
        xmlns:widgets="http://schemas.android.com/apk/res-auto"
        android:id="@+id/m_trial_tabBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/simi_color_white"
        widgets:tab_text_color="@color/tab_text_color"
        widgets:tab_text_selected_color="@color/simi_color_red"
        widgets:tab_text_size="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/simi_color_line_gray" />

    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </LinearLayout>
</LinearLayout>