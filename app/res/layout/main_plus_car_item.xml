<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dip"
    android:background="@color/simi_color_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/m_ll1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/m_car_icon"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/ad_loading" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/m_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/m_ll1"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/m_car_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_application_icon"
                    android:maxLines="1"
                    android:paddingBottom="3dp"
                    android:text="哇哈哈"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp" >

                    <TextView
                        android:id="@+id/m_car_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_application_icon"
                        android:maxLines="1"
                        android:text="订单金额"
                        android:textColor="@color/simi_color_gray"
                        android:textSize="14sp" 
                        android:visibility="visible"
                        />

                    <TextView
                        android:id="@+id/m_car_statue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_application_icon"
                        android:maxLines="1"
                        android:text="状态"
                        android:textColor="@color/simi_color_gray"
                        android:textSize="14sp"
                        android:visibility="gone"
                         />
                </LinearLayout>

                <TextView
                    android:id="@+id/m_car_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_application_icon"
                    android:maxLines="1"
                    android:text="下单时间"
                    android:textColor="@color/simi_color_gray"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:orientation="horizontal" 
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/m_team_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/plus_water_selector"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp"
                    android:paddingTop="10dp"
                    android:text="签收"
                    android:textColor="@color/simi_color_white"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>