<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/view_to_fra_title_bar"
        layout="@layout/trial_course_title_bar" />

    <include
        android:id="@+id/m_banner"
        layout="@layout/banner" />

    <com.meijialife.simi.ui.IndicatorTabBar
        android:id="@+id/m_trial_tabBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/simi_color_white"
        ptr:tab_text_color="@color/tab_text_color"
        ptr:tab_text_selected_color="@color/simi_color_red"
        ptr:tab_text_size="14sp" />

    <include layout="@layout/view_line" />


    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/m_trial_listview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/simi_color_white"
        android:cacheColorHint="#00000000"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:smoothScrollbar="true"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrListViewExtrasEnabled="false"
        ptr:ptrScrollingWhileRefreshingEnabled="true" />

</LinearLayout>