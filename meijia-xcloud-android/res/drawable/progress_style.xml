 <item android:id="@android:id/background">  
        <shape>  
            <gradient  
                    android:startColor="@color/simi_color_line_gray"  
                    android:centerColor="@color/simi_color_line_gray"  
                    android:endColor="@color/simi_color_line_gray"  
                      
            />  
        </shape>  
    </item>  
  
    <item android:id="@android:id/secondaryProgress">  
        <clip>  
            <shape>  
                <gradient  
                        android:startColor="@color/simi_color_red"  
                        android:centerColor="@color/simi_color_red"  
                        android:endColor="@color/simi_color_red"  
                />  
            </shape>  
        </clip>  
    </item>  
  
    <item android:id="@android:id/progress">  
        <clip>  
            <shape>  
                <gradient  
                    android:startColor="@color/simi_color_blue"  
                    android:centerColor="@color/simi_color_blue"  
                    android:endColor="@color/simi_color_blue"  
                />  
            </shape>  
        </clip>  
    </item>  

</layer-list>
