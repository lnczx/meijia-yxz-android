<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--底部功能条-->
    <FrameLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/webview_comment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#F4F5F6"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/m_btn_send_comment"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_round_edittext"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="写评论..."
                android:textColor="@color/simi_color_gray"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/m_iv_comment"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/new_frg_ping_lun" />

                <ImageView
                    android:id="@+id/m_iv_zan"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/bg_img_shoucang_selector" />

                <ImageView
                    android:id="@+id/m_iv_share"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/new_frg_fen_xiang" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/btn_take"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fd9808"
            android:gravity="center"
            android:text="参加该课程"
            android:textColor="@color/white" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom"
        android:orientation="vertical">

        <!--标题栏-->
        <include layout="@layout/layout_title_bar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--播放器-->
            <RelativeLayout
                android:id="@+id/layout_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.aliyun.vodplayerview.widget.AliyunVodPlayerView
                    android:id="@+id/video_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </RelativeLayout>
            <!--播放器上覆盖的缩略图-->
            <ImageView
                android:id="@+id/iv_thum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY" />
        </FrameLayout>

        <!--页面中部-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f7f7f7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_vname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:text="视频名称"
                        android:textColor="#000000"
                        android:textSize="16.5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_tname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="12dp"
                        android:text="讲师 --"
                        android:textColor="#666666"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tv_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="9dp"
                        android:text="0 人学过"
                        android:textColor="#b1b0b0"
                        android:textSize="10dp" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="6dp"
                        android:background="#e6e6e6" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35.2dp"
                    android:background="#ffffff"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="￥ 0.00"
                        android:textColor="#ff8400"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_orig_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_price"
                        android:layout_marginLeft="16dp"
                        android:text="￥ 0.00"
                        android:textColor="#999999"
                        android:textSize="11dp" />
                    <TextView
                        android:id="@+id/tv_exchange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:text="金币兑换代金券"
                        android:textColor="#ff8400"
                        android:textSize="13dp" />
                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/arrow_right"
                        android:visibility="visible" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:paddingBottom="6dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="6dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="4dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="课程概述"
                            android:textColor="#333333"
                            android:textSize="15dp" />
                        <TextView
                            android:id="@+id/tv_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:text="了解更多"
                            android:textColor="#ff8400"
                            android:textSize="13dp" />
                        <ImageView
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/arrow_right"
                            android:visibility="visible" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="本课程内容涉及心理学、哲学、管理学。本课程内容涉及心理学、哲学、管理学。本课程内容涉及心理学、哲学、管理学。本课程内容涉及心理学、哲学、管理学。本课程内容涉及心理学、哲学、管理学。"
                        android:textColor="#999999"
                        android:textSize="11dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="52.8dp"
                    android:layout_marginTop="7dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="相关课程"
                    android:textColor="#333333"
                    android:textSize="15dp" />

                <ListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="#f7f7f7"
                    android:dividerHeight="1dp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <!--写评论View-->
    <include layout="@layout/layout_video_comment" />

</RelativeLayout>