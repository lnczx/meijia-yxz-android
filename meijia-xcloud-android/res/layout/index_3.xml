<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color"
    android:orientation="vertical"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_bg_color"
        android:orientation="vertical" >

        <!-- 顶部Tab -->

        <include layout="@layout/layout_friend_top_tab" />
        <!-- 好友动态 -->

        <include layout="@layout/layout_friend_dynamic" />
        <!-- 好友 -->

        <include layout="@layout/layout_friend" />
        <!-- 消息 -->

        <include layout="@layout/layout_friend_msg" />
      
    </LinearLayout>

    <View
        android:id="@+id/layout_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#a2000000"
        android:visibility="gone" />

</RelativeLayout>