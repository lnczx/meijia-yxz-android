<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color"
    android:orientation="vertical" >

    <include
        android:id="@+id/view_title_bar"
        layout="@layout/layout_title_bar" />

    <EditText
        android:id="@+id/feedback_tv_text"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="#ffffff"
        android:gravity="top"
        android:hint="请描述您的详情，我们会尽快帮您解决..."
        android:maxLines="200"
        android:padding="20dp"
        android:textColor="@color/common_input_hint_text_color"
         />

    <Button
        android:id="@+id/feedback_btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_long_orange_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="14dp"
        android:background="@drawable/btn_common_background"
        android:text="提交"
        android:textColor="@color/simi_color_white" />

</LinearLayout>