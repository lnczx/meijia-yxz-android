<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_title_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="@color/title_background_color"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/title_btn_left"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:focusable="true"
        android:paddingLeft="30dp"
        android:paddingRight="90dp"
        android:scaleType="center"
        android:src="@drawable/title_left_back"
        android:visibility="gone" />

    <TextView
        android:id="@+id/header_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:focusable="false"
        android:gravity="center"
        android:maxEms="10"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/title_text_color"
        android:textSize="@dimen/title_bar_text_size" />

    <TextView
        android:id="@+id/activity_selectimg_send"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/text_normal"
        android:textSize="20sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/title_btn_right"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:focusable="true"
        android:scaleType="centerInside"
        android:visibility="gone" />

    <!-- 个人信息页面编辑按钮 -->

    <RelativeLayout
        android:id="@+id/title_btn_edit_layout"
        android:layout_width="@dimen/title_bar_height"
        android:layout_height="@dimen/title_bar_height"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:focusable="true"
        android:visibility="gone" >

        <TextView
            android:id="@+id/title_btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/simi_color_red"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/m_rl_friend_add"
        android:layout_width="@dimen/title_bar_height"
        android:layout_height="@dimen/title_bar_height"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:focusable="true"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/m_iv_friend_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:src="@drawable/company_jiahao" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/m_rl_meeting"
        android:layout_width="@dimen/title_bar_height"
        android:layout_height="@dimen/title_bar_height"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:focusable="true"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:src="@drawable/iconfont_sousuo" />
    </RelativeLayout>

</RelativeLayout>