<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/bg_tip_coner"
    android:orientation="vertical" 
    android:layout_marginLeft="100dp"
    android:layout_marginRight="30dp"
    android:layout_marginBottom="40dp"
    android:layout_marginTop="20dp"
    
    >

    <LinearLayout
        android:id="@+id/ll_tip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_weight="5"
        android:orientation="vertical" >

           <com.meijialife.simi.ui.XCRoundRectImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tip_iv_icon"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
             />
		
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3"
            >
            
          <TextView
            android:id="@+id/tip_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:padding="10dp"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
             />

        <TextView
            android:id="@+id/tip_tv_content"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:padding="5dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:text=""
            android:textColor="@color/simi_color_dark_gray"
            android:textSize="14sp"
            />
         </LinearLayout>
       
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#e1e1e1" />

    <LinearLayout
        android:id="@+id/ll_status"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tip_tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:text="了解更多"
            android:textColor="@color/common_botton_bar_blue" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_above="@id/ll_status"
            android:background="#e1e1e1" />

        <TextView
            android:id="@+id/tip_tv_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:text="我知道了"
            android:textColor="@color/common_botton_bar_blue" />
    </LinearLayout>

</LinearLayout>