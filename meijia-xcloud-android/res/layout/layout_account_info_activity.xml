<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color"
    android:orientation="vertical" >

    <include
        android:id="@+id/view_title_bar"
        layout="@layout/layout_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tv_account_logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_btn_bg_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@color/simi_color_white"
            android:fadingEdge="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rl_item_0"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/btn_list_item_bg" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:text="头像"
                        android:textColor="@color/simi_color_gray"
                        android:textSize="@dimen/account_text_size" />

                    <com.meijialife.simi.ui.RoundImageView
                        android:id="@+id/iv_header"
                        android:layout_width="66dp"
                        android:layout_height="66dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:src="@drawable/ic_defult_touxiang"
                        imagecontrol:border_inside_color="@color/simi_color_white"
                        imagecontrol:border_outside_color="@color/simi_color_white"
                        imagecontrol:border_thickness_in="1dp"
                        imagecontrol:border_thickness_out="1dp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/activity_bg_color" />

                <RelativeLayout
                    android:id="@+id/rl_item_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_height"
                    android:background="@drawable/btn_list_item_bg" >

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:text="昵称"
                        android:textColor="@color/simi_color_gray"
                        android:textSize="@dimen/account_text_size" />

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_toRightOf="@id/tv_name"
                        android:background="@null"
                        android:enabled="false"
                        android:gravity="right|center_vertical"
                        android:text="name"
                        android:textColor="@color/simi_color_red"
                        android:textSize="@dimen/font_size_16" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/activity_bg_color" />

                <RelativeLayout
                    android:id="@+id/rl_item_2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_height"
                    android:background="@drawable/btn_list_item_bg" >

                    <TextView
                        android:id="@+id/tv_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:text="手机"
                        android:textColor="@color/simi_color_gray"
                        android:textSize="@dimen/account_text_size" />

                    <EditText
                        android:id="@+id/et_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_toRightOf="@id/tv_mobile"
                        android:background="@null"
                        android:enabled="false"
                        android:gravity="right|center_vertical"
                        android:text="18666666666"
                        android:textColor="@color/simi_color_red"
                        android:textSize="@dimen/font_size_16" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/activity_bg_color" />

                <RelativeLayout
                    android:id="@+id/rl_item_3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_height"
                    android:background="@drawable/btn_list_item_bg" >

                    <TextView
                        android:id="@+id/tv_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:text="性别"
                        android:textColor="@color/simi_color_gray"
                        android:textSize="@dimen/account_text_size" />

                    <TextView
                        android:id="@+id/et_gender"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_toRightOf="@id/tv_gender"
                        android:background="@null"
                        android:enabled="false"
                        android:gravity="right|center_vertical"
                        android:text="男"
                        android:textColor="@color/simi_color_red"
                        android:textSize="@dimen/font_size_16" />
                </RelativeLayout>
                  <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/activity_bg_color" />
                 <RelativeLayout
                    android:id="@+id/rl_item_5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_height"
                    android:background="@drawable/btn_list_item_bg" >

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:text="常用地址"
                        android:textColor="@color/simi_color_gray"
                        android:textSize="@dimen/account_text_size" />

                   <ImageView
	                   android:layout_width="13dp"
	                   android:layout_height="13dp"
	                   android:layout_alignParentRight="true"
	                   android:layout_centerVertical="true"
	                   android:layout_marginRight="10dp"
	                   android:src="@drawable/arrow_right" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/activity_bg_color" />

                <RelativeLayout
                    android:id="@+id/rl_item_4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_height"
                    android:background="@drawable/btn_list_item_bg" >

                    <TextView
                        android:id="@+id/tv_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:text="封面相册"
                        android:textColor="@color/simi_color_gray"
                        android:textSize="@dimen/account_text_size" />
                    
                    <ImageView
	                   android:layout_width="13dp"
	                   android:layout_height="13dp"
	                   android:layout_alignParentRight="true"
	                   android:layout_centerVertical="true"
	                   android:layout_marginRight="10dp"
	                   android:src="@drawable/arrow_right" />

                   <!--  <EditText
                        android:id="@+id/et_card"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_toRightOf="@id/tv_card"
                        android:background="@null"
                        android:enabled="false"
                        android:gravity="right|center_vertical"
                        android:textColor="@color/simi_color_red"
                        android:textSize="@dimen/font_size_16" /> -->
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/activity_bg_color" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>