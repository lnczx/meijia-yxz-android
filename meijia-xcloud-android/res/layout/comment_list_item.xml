<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/simi_color_line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:orientation="vertical" >

            <com.meijialife.simi.ui.RoundImageView
                android:id="@+id/m_iv_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/card_icon_margin_left"
                android:src="@drawable/iconfont_tongxunbu"
                imagecontrol:border_inside_color="@color/simi_color_white"
                imagecontrol:border_outside_color="@color/simi_color_white"
                imagecontrol:border_thickness_in="1dp"
                imagecontrol:border_thickness_out="1dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/m_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="用户名"
                    android:textColor="@color/simi_color_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/m_tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="评论"
                    android:textColor="@color/simi_color_gray" 
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/m_tv_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/m_tv_comment"
                    android:text="点赞"
                    android:textColor="@color/simi_color_gray"
                    android:visibility="gone"
                     />
            </RelativeLayout>

            <TextView
                android:id="@+id/m_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:text="时间"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/m_comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:text="评论内容"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
 <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/simi_color_line_gray" />
</LinearLayout>