<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/simi_color_white"
        android:padding="18dp" >

        <LinearLayout
            android:id="@+id/ll_partner_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/item_iv_icon"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一天体验："
                android:textColor="@color/simi_color_gray" />
            <TextView
                android:id="@+id/item_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99元"
                android:textColor="@color/simi_color_gray" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_tv_buy"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_buy"
            android:gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="购买"
            android:textColor="@color/simi_color_red" />
    </RelativeLayout>

</LinearLayout>