<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dip"
    android:background="@color/simi_color_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/m_center_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:background="@color/simi_color_white"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/m_center_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_application_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10.0dip"
                android:maxLines="1"
                android:text=""
                android:textSize="14sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/m_center_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3.0dip"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/simi_color_dark_gray"
                    android:textSize="12.0sp" />

                <TextView
                    android:id="@+id/m_center_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/app_center_add"
                    android:paddingBottom="3dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:text="添加" 
                    android:textSize="12sp"
                    android:clickable="true"
                    android:focusable="true"
                    />
                <TextView
                    android:id="@+id/m_center_default_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="已添加"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:textColor="@color/simi_color_dark_gray"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:clickable="true"
                     />
            </RelativeLayout>

            <TextView
                android:id="@+id/m_center_provider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_application_icon"
                android:layout_centerHorizontal="true"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/simi_color_dark_gray"
                android:textSize="12.0sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>