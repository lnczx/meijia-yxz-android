<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widgets="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:layout_marginTop="8dp"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/simi_color_line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:background="@color/simi_color_white"
        >

        <com.meijialife.simi.ui.IndicatorTabBar
            android:id="@+id/tab_indicator3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:visibility="visible"
            widgets:tab_text_color="@color/tab_text_color"
            widgets:tab_text_selected_color="@color/tab_text_selected_color"
            widgets:tab_text_size="18sp" />

        <LinearLayout
            android:id="@+id/ll_more_columns2"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="visible" 
            android:background="@color/simi_color_white"
            >

            <ImageView
                android:id="@+id/button_more_columns2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:src="@drawable/channel_add" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/simi_color_line_gray" />

</LinearLayout>