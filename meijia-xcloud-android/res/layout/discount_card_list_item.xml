<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin" >

        <RelativeLayout
            android:id="@+id/rl_bg"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            android:background="@drawable/youhuiquan_bg_1" >

            <TextView
                android:id="@+id/item_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="汽車保养"
                android:textColor="@color/simi_color_white" />

            <TextView
                android:id="@+id/item_tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:layout_below="@id/item_tv_name"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="￥120.00"
                android:textColor="@color/simi_color_white"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/item_tv_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_tv_money"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="8dp"
                android:text='"焕新礼包"兑换券'
                android:textColor="@color/simi_color_white"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有效期至2015-10-31"
                android:textColor="#DA792C" />

            <TextView
                android:id="@+id/item_tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="1.仅限本人使用\n2.仅限中意客户参加‘换新礼包’兑换使用\n3.服务类型仅适用于保洁"
                android:textColor="@color/simi_color_gray" 
                android:textSize="13sp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>