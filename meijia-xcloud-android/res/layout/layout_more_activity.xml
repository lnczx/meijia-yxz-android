<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color"
    android:orientation="vertical" >

     <include
        android:id="@+id/view_title_bar"
        layout="@layout/layout_title_bar" />

    <ScrollView
        android:id="@+id/main_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:scrollbarStyle="outsideOverlay" 
        
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical" >

            <!-- 通用设置 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingBottom="90dp" >

                <LinearLayout
                    android:id="@+id/setting_general"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/setting_item_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp"
                        android:src="@drawable/icon_settting_general" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:drawableRight="@drawable/arrow_right"
                        android:gravity="center_vertical"
                        android:paddingRight="15dp"
                        android:text="通用设置"
                        android:textColor="#FF3D3D3D"
                        android:textSize="16sp" />
                </LinearLayout>
                <!-- 弹幕设置 -->

                <LinearLayout
                    android:id="@+id/setting_update"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/setting_item_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp"
                        android:src="@drawable/icon_settting_danmaku" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:drawableRight="@drawable/arrow_right"
                        android:gravity="center_vertical"
                        android:paddingRight="15dp"
                        android:text="检测更新"
                        android:textColor="#FF3D3D3D"
                        android:textSize="16sp" />
                </LinearLayout>
                <!-- 关于我们 -->

                <RelativeLayout
                    android:id="@+id/setting_about_us"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/setting_item_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp" >

                    <ImageView
                        android:id="@+id/setting_productrelated_checkupdates_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/arrow_right" />

                    <TextView
                        android:id="@+id/setting_productrelated_checkupdates_righttext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/setting_productrelated_checkupdates_arrow"
                        android:background="@drawable/bg_lace_red"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="new"
                        android:textColor="#FFFFFFFF"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/setting_productrelated_checkupdates_lefttext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@id/setting_productrelated_checkupdates_righttext"
                        android:drawableLeft="@drawable/icon_settting_about"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="关于我们"
                        android:textColor="#FF3D3D3D"
                        android:textSize="16sp" />
                </RelativeLayout>

                <!-- 意见反馈 -->

                <LinearLayout
                    android:id="@+id/setting_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/setting_item_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp"
                        android:src="@drawable/icon_settting_feedback" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:drawableRight="@drawable/arrow_right"
                        android:gravity="center_vertical"
                        android:paddingRight="15dp"
                        android:text="意见反馈"
                        android:textColor="#FF3D3D3D"
                        android:textSize="16sp" />
                </LinearLayout>
                <!-- 打个分呗 -->

                <LinearLayout
                    android:id="@+id/setting_rate"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/setting_item_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp"
                        android:src="@drawable/icon_settting_rate" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:drawableRight="@drawable/arrow_right"
                        android:gravity="center_vertical"
                        android:paddingRight="15dp"
                        android:text="打个分呗"
                        android:textColor="#FF3D3D3D"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 退出登录 -->

            <TextView
                android:id="@+id/setting_logout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/bg_logout_select"
                android:clickable="true"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>