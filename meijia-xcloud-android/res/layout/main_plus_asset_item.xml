<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dip"
    android:background="@color/simi_color_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
         <com.meijialife.simi.ui.RoundImageView
            android:id="@+id/m_center_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:src="@drawable/iconfont_tongxunbu"
            imagecontrol:border_inside_color="@color/simi_color_white"
            imagecontrol:border_outside_color="@color/simi_color_white"
            imagecontrol:border_thickness_in="1dp"
            imagecontrol:border_thickness_out="1dp"
            android:visibility="gone"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_marginLeft="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/m_asset_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_application_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10.0dip"
                android:maxLines="1"
                android:text="1212"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/m_asset_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3.0dip"
                    android:maxLines="1"
                    android:text="sdfs"
                    android:textColor="@color/simi_color_dark_gray"
                    android:textSize="12.0sp" />

                <TextView
                    android:id="@+id/m_center_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/app_center_add"
                    android:paddingBottom="3dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:text="添加"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/m_center_default_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:text="已添加"
                    android:textColor="@color/simi_color_dark_gray"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/m_asset_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_application_icon"
                android:layout_centerHorizontal="true"
                android:maxLines="1"
                android:text="dfsd"
                android:textColor="@color/simi_color_dark_gray"
                android:textSize="12.0sp"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>