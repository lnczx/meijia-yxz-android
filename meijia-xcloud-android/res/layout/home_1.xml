<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widgets="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/new_frg_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <include layout="@layout/new_frg_search" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        
         <com.handmark.pulltorefresh.library.PullToRefreshListView
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/m_lv_home"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:smoothScrollbar="true"
            ptr:ptrAnimationStyle="flip"
            ptr:ptrListViewExtrasEnabled="false"
            ptr:ptrScrollingWhileRefreshingEnabled="true"
             >
        </com.handmark.pulltorefresh.library.PullToRefreshListView>
      
          <RelativeLayout
            android:id="@+id/m_rl_category"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#f4f4f4"
            android:visibility="visible" >

            <com.meijialife.simi.ui.IndicatorTabBar
                android:id="@+id/tab_indicator1"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@color/bg_gv"
                widgets:tab_text_color="@color/tab_text_color"
                widgets:tab_text_selected_color="@color/tab_text_selected_color"
                widgets:tab_text_size="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tab_indicator1"
                android:background="@color/simi_color_line_gray" />
        </RelativeLayout> 
    </FrameLayout>

</LinearLayout>